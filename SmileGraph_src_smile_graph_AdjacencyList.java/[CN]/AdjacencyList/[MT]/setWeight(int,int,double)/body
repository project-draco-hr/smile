{
  if (digraph) {
    for (    Edge edge : graph[source]) {
      if (edge.v2 == target) {
        edge.weight=weight;
        return;
      }
    }
  }
 else {
    for (    Edge edge : graph[source]) {
      if ((edge.v1 == source && edge.v2 == target) || (edge.v2 == source && edge.v1 == target)) {
        edge.weight=weight;
        return;
      }
    }
  }
  addEdge(source,target,weight);
}
