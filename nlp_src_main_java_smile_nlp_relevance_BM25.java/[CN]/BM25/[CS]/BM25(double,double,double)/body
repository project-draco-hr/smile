{
  if (k1 < 0) {
    throw new IllegalArgumentException("Negative k1 = " + k1);
  }
  if (b < 0 || b > 1) {
    throw new IllegalArgumentException("Invalid b = " + b);
  }
  if (delta < 0) {
    throw new IllegalArgumentException("Invalid delta = " + delta);
  }
  this.k1=k1;
  this.b=b;
  this.delta=delta;
}
