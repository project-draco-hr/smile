{
  if (radius <= 0.0) {
    throw new IllegalArgumentException("Invalid radius: " + radius);
  }
  for (int i=0; i < data.length; i++) {
    if (q == data[i] && identicalExcluded) {
      continue;
    }
    double d=distance.d(q,data[i]);
    if (d <= radius) {
      neighbors.add(new SimpleNeighbor<T>(data[i],i,d));
    }
  }
}
