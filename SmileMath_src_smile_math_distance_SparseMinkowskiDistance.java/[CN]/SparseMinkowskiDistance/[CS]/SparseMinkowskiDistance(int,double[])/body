{
  if (p <= 0)   throw new IllegalArgumentException(String.format("The order p has to be larger than 0: p = d",p));
  for (int i=0; i < weight.length; i++) {
    if (weight[i] < 0)     throw new IllegalArgumentException(String.format("Weight has to be nonnegative: %f",weight[i]));
  }
  this.p=p;
  this.weight=weight;
}
