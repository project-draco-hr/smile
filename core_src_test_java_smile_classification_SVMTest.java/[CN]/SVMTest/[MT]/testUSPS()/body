{
  System.out.println("USPS");
  DelimitedTextParser parser=new DelimitedTextParser();
  parser.setResponseIndex(new NominalAttribute("class"),0);
  try {
    AttributeDataset train=parser.parse("USPS Train",smile.data.parser.IOUtils.getDataFile("usps/zip.train"));
    AttributeDataset test=parser.parse("USPS Test",smile.data.parser.IOUtils.getDataFile("usps/zip.test"));
    double[][] x=train.toArray(new double[train.size()][]);
    int[] y=train.toArray(new int[train.size()]);
    double[][] testx=test.toArray(new double[test.size()][]);
    int[] testy=test.toArray(new int[test.size()]);
    SVM<double[]> svm=new SVM<double[]>(new GaussianKernel(8.0),5.0,Math.max(y) + 1,SVM.Multiclass.ONE_VS_ONE);
    svm.learn(x,y);
    svm.finish();
    int error=0;
    for (int i=0; i < testx.length; i++) {
      if (svm.predict(testx[i]) != testy[i]) {
        error++;
      }
    }
    System.out.format("USPS error rate = %.2f%%\n",100.0 * error / testx.length);
    assertTrue(error < 95);
    System.out.println("USPS one more epoch...");
    for (int i=0; i < x.length; i++) {
      int j=Math.randomInt(x.length);
      svm.learn(x[j],y[j]);
    }
    svm.finish();
    error=0;
    for (int i=0; i < testx.length; i++) {
      if (svm.predict(testx[i]) != testy[i]) {
        error++;
      }
    }
    System.out.format("USPS error rate = %.2f%%\n",100.0 * error / testx.length);
    assertTrue(error < 95);
  }
 catch (  Exception ex) {
    ex.printStackTrace();
  }
}
